<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn badge-danger">Nova Postagem</button></a>


{{#each postagens}}

<div class="conteiner">
    <div class="card mt-4">
        <div class="card-body "></div>
        <h4>{{titulo}}</h4>
        <p>Descrição: {{descricao}}</p>
        <small>Data: {{data}}</small><br>
        <small>Categoria: {{categoria.nome}}</small><br>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-danger float-right mb-3 mr-3">Editar
                Postagem</button></a>
        <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-dark float-right mb-3 mr-3">Deleter
                Postagem</button></a>
    </div>
</div>
{{else}}
<p>Nenhuma postagem Registrada!!</p>
{{/each}}